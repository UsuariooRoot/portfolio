---
import { ArrowRight } from "lucide-react";
import { buttonVariants } from "@/components/ui/button";
import { socialLinks } from "@/data/social";
import AvailableBtn from "@/components/ui/availabe-btn.astro";
import ProfileImage from "@/components/ui/profile-image.astro";
import { selectedLanguage, useTranslations } from "@/locales/i18n";

const t = useTranslations(selectedLanguage);
---

<section id="home" class="my-16 lg:my-44 flex flex-col lg:flex-row gap-4">
  <!-- Profile Image Section -->
  <article class="lg:w-1/3 relative order-first lg:order-last">
    <ProfileImage />
  </article>

  <!-- Content Section -->
  <article class="flex flex-col gap-8">
    <!-- Headline -->
    <div class="flex flex-col justify-center">
      <AvailableBtn />
      <h1
        class="max-w-[24ch] animate-fade-in-down text-4xl font-bold leading-tight text-balance sm:text-5xl md:text-6xl"
      >
        {t("hero.title")}
      </h1>
    </div>

    <!-- Bio Description -->
    <p
      class="animate-fade-in-down text-sm text-pretty text-white/60 md:text-base"
      set:html={t("hero.description")}
    />

    <!-- Call to Action Buttons -->
    <div class="flex flex-col sm:flex-row gap-4">
      <a
        class={buttonVariants({ variant: "default", size: "lg" })}
        href="#projects"
      >
        {t("hero.button-my-projects")} <ArrowRight className="ml-2 h-4 w-4" />
      </a>
      <a
        class={`${buttonVariants({ variant: "outline", size: "lg" })} py-4`}
        href="mailto:Stevenfernandeztango3@gmail.com"
      >
        {t("hero.button-contact")}
      </a>
    </div>

    <!-- Social Media Links -->
    <div class="flex gap-2 text-3xl">
      {
        socialLinks.map(({ platform, icon: Icon, href, hoverClass }) => (
          <a
            target="_blank"
            class={`opacity-60 transition duration-300 ${hoverClass}`}
            href={href}
          >
            <span class="sr-only">{platform}</span>
            <Icon />
          </a>
        ))
      }
    </div>
  </article>
</section>
