---
import TabsAbout from "./TabsAbout";
import ProfileImage from "../ui/profile-image.astro";
import { selectedLanguage, useTranslations } from "@/locales/i18n";

const t = useTranslations(selectedLanguage);
---

<section id="about" class="py-32">
  <div class="container mx-auto px-4">
    <div class="flex flex-col lg:flex-row items-center gap-12">
      <div class="lg:w-2/5 relative">
        <ProfileImage />
      </div>
      <div class="lg:w-3/5">
        <h2
          class="text-3xl md:text-4xl font-bold mb-6 flex items-center gap-3"
          set:html={t("about.title")}
        />
        <TabsAbout lang={selectedLanguage} client:load />
      </div>
    </div>
  </div>
</section>
